<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FFFFFF"
    tools:context=".PersonalInformation.personalInformation_Activity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@drawable/beijing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleAngle="15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="81dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="412dp"
        android:src="@drawable/touxiang"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="84dp" />

    <LinearLayout
        android:id="@+id/select_group_button"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="210dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/statistical_table"

        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/ziti"
            android:text="个人信息"
            android:textColor="#A57D04"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/ziti"
            android:text="战斗记录"
            android:textColor="#A57D04"
            android:textSize="30dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fontFamily="@font/ziti"
            android:text="仙域大陆"
            android:textColor="#A57D04"
            android:textSize="30dp" />

    </LinearLayout>

    <TableLayout
        app:layout_constraintHorizontal_weight="3"
        android:id="@+id/statistical_table"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/select_group_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76">

        <TableRow
            android:layout_width="300dp"
            android:layout_height="48dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:fontFamily="@font/ziti"
                android:text="战斗场次"
                android:textColor="#492D55"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:fontFamily="@font/ziti"
                android:text="回合场次"
                android:textColor="#492D55"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:fontFamily="@font/ziti"
                android:text="即时场次"
                android:textColor="#492D55"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="300dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="胜率"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="胜率"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/ziti"
                android:text="胜率"
                android:textColor="#7C2C2C"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="300dp"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/editTextNumberPassword4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="numberPassword" />

            <EditText
                android:id="@+id/editTextNumberPassword5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberPassword" />

            <EditText
                android:id="@+id/editTextNumberPassword6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberPassword" />
        </TableRow>

        <TableRow
            android:layout_width="120sp"
            android:layout_height="match_parent" />
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>